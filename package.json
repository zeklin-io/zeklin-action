{
  "name": "zeklin-action",
  "description": "Zeklin action",
  "version": "0.0.0",
  "author": "Zeklin",
  "private": true,
  "homepage": "https://github.com/zeklin-io/zeklin-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeklin-io/zeklin-action.git"
  },
  "bugs": {
    "url": "https://github.com/zeklin-io/zeklin-action/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "bundle": "pnpm pretty && pnpm package",
    "ci-test": "jest",
    "pretty": "prettier --write '**/*.ts'",
    "isPretty": "prettier --check '**/*.ts'",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "pnpm package -- --watch",
    "test": "(jest && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "pnpm pretty && pnpm lint && pnpm test && pnpm package",
    "compile": "tsc --noEmit"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      ".+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/exec": "1.1.1",
    "@actions/github": "5.1.1",
    "@actions/io": "1.1.3",
    "effect": "2.0.0-next.29"
  },
  "devDependencies": {
    "@types/jest": "29.5.4",
    "@types/node": "20.5.7",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "@vercel/ncc": "0.36.1",
    "eslint": "8.48.0",
    "eslint-plugin-github": "4.10.0",
    "eslint-plugin-jest": "27.2.3",
    "eslint-plugin-jsonc": "2.9.0",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "29.6.4",
    "js-yaml": "4.1.0",
    "make-coverage-badge": "1.2.0",
    "prettier": "3.0.3",
    "prettier-eslint": "15.0.1",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  }
}
